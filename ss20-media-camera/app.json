{
  "expo": {
    "name": "ss20-media-camera",
    "slug": "ss20-media-camera",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ss20mediacamera",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Cho phép $(PRODUCT_NAME) sử dụng camera để chụp ảnh và quay video.",
        "NSMicrophoneUsageDescription": "Cho phép $(PRODUCT_NAME) sử dụng micro để quay video có âm thanh.",
        "NSPhotoLibraryUsageDescription": "Cho phép $(PRODUCT_NAME) truy cập thư viện ảnh để lưu ảnh và video.",
        "NSPhotoLibraryAddUsageDescription": "Cho phép $(PRODUCT_NAME) lưu ảnh và video vào thư viện."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ],
      "package": "com.anonymous.ss20mediacamera"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Ứng dụng cần truy cập vào ảnh của bạn để bạn có thể chọn ảnh đại diện.",
          "cameraPermission": "Ứng dụng cần truy cập camera để bạn có thể chụp ảnh mới."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Cho phép $(PRODUCT_NAME) sử dụng camera của bạn để chụp ảnh và quay video.",
          "microphonePermission": "Cho phép $(PRODUCT_NAME) sử dụng microphone để quay video có âm thanh.",
          "recordAudioAndroid": true,
          "recordAudioIOS": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Cho phép ứng dụng truy cập vào thư viện ảnh.",
          "savePhotosPermission": "Cho phép ứng dụng lưu ảnh vào thư viện.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
